{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        {
          "owner": "tsup",
          "source": "tsup",
          "severity": "error",
          "pattern": [
            {
              "regexp": "^âœ˜\\s+\\[ERROR\\]\\s+(.+)$",
              "message": 1
            },
            {
              "regexp": "^\\s*$"
            },
            {
              "regexp": "^\\s+(.+):(\\d+):(\\d+):$",
              "file": 1,
              "line": 2,
              "column": 3
            }
          ],
          "background": {
            "beginsPattern": "^ESM|^CJS Build start$",
            "endsPattern": "^ESM|^CJS .* Build success|^ESM|^CJS Build failed"
          }
        }
      ]
    }
  ]
}
