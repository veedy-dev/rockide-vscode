{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"dependsOn": [
				"npm: watch:tsc",
				"npm: watch:esbuild"
			],
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "watch:esbuild",
			"group": "build",
			"isBackground": true,
			"label": "npm: watch:esbuild",
			"presentation": {
				"group": "watch",
				"reveal": "never"
			},
			"problemMatcher": {
				"severity": "error",
				"applyTo": "closedDocuments",
				"source": "esbuild",
				"fileLocation": "relative",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "\\[watch\\] build started"
					},
					"endsPattern": {
						"regexp": "\\[watch\\] build finished"
					}
				},
				"pattern": [
					{
						"regexp": "^[✘▲] \\[([A-Z]+)\\] (.+)",
						"severity": 1,
						"message": 2
					},
					{
						"regexp": "^(?:\\t| {4})(?!\\s)([^:]+)(?::([0-9]+))?(?::([0-9]+))?:$",
						"file": 1,
						"line": 2,
						"column": 3
					}
				]
			}
		},
		{
			"type": "npm",
			"script": "watch:tsc",
			"group": "build",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"label": "npm: watch:tsc",
			"presentation": {
				"group": "watch",
				"reveal": "never"
			}
		}
	]
}
